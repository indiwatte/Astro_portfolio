---
import { getCollection } from "astro:content";
import OverviewLayout from "../../layouts/OverviewLayout.astro";

const projects = await getCollection("projects");
---

<OverviewLayout
    title="Projects"
    intro="Welcome to My Project overview, a collection of my works of my DEVINE journey"
    >
    <ul class="list">
        {
            projects.map((project) => (
                <li>
                    <a href={`/projects/${project.id.replace(".md", "")}`}>
                        <h2>{project.data.title}</h2>
                    </a>
                    <p class="description">{project.data.description}</p>
                    <p class="date">{project.data.date}</p>
                </li>
            ))
        }
    </ul>

    <style>
        body {
           
            
            font-family:
                system-ui,
                -apple-system,
                BlinkMacSystemFont,
                "Segoe UI",
                Roboto,
                sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 2rem;
            font-size: 2rem;
       
        }

        .project-list {
            list-style: none;
            padding: 0;
            margin: 2rem auto;
            max-width: 700px;
        }

        .project-item {
            margin-bottom: 2rem;
            border-bottom: 1px solid #333;
            padding-bottom: 1rem;
        }

        .project-link {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            background: transparent;
            text-decoration: none;
            color: var(--green);
        }

        .project-link:hover {
            background-color: var(--purple);
            text-decoration: none;
            transform: translateY(-2px);
        }

        .description {
        
            font-size: 1rem;
            margin: 0.3rem 0;
        }

        .date {
          
            font-size: 0.9rem;
        }
    </style>
</BaseLayout>
</OverviewLayout>
