---
import { getCollection } from "astro:content";
import OverviewLayout from "../../layouts/OverviewLayout.astro";

const journals = await getCollection("journals");
---

<OverviewLayout
    title="Mind Drops"
    intro="Welcome to My Mind Drops, a collection of inspiration and reflections."
>
    <ul class="list">
        {
            journals.map((journal) => (
                <li>
                    <a href={`/journals/${journal.id.replace(".md", "")}`}>
                        <h2>{journal.data.title}</h2>
                    </a>
                    <p class="description">{journal.data.description}</p>
                    
                </li>
            ))
        }
    </ul>

    <style>
        body {
            font-family:
                system-ui,
                -apple-system,
                BlinkMacSystemFont,
                "Segoe UI",
                Roboto,
                sans-serif;
            margin: 0;
            padding: 0;
        }

        h1,
        .intro-description {
            text-align: center;
            margin-top: 2rem;
        }

        h1 {
            font-size: 2rem;
        }

        .intro-description {
            max-width: 600px;
            margin: 2rem auto;
        }

        .blog-list {
            list-style: none;
            padding: 0;
            margin: 2rem auto;
            max-width: 700px;
        }

        .blog-item {
            margin-bottom: 2rem;
            border-bottom: 1px solid #333;
            padding-bottom: 1rem;
        }

        .blog-link {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            background: transparent;
            text-decoration: none;
            color: var(--green);
        }

        .blog-link:hover {
            background-color: var(--purple);
            text-decoration: none;
            transform: translateY(-2px);
        }

        .blog-link h2 {
            font-size: 1.4rem;
            margin: 0 0 0.5rem;
        }

        .description {
            font-size: 1rem;
            margin: 0.3rem 0;
        }

        .date {
            font-size: 0.9rem;
        }
    </style>
</BaseLayout>
</OverviewLayout>
