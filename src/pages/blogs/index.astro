---
import { getCollection } from "astro:content";
const blogs = await getCollection("blogs");
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Indi Watte | Blogs">
    <h1>Blogs</h1>

    <ul class="blog-list">
        {
            blogs.map((blog) => (
                <li class="blog-item">
                    <a <a href={`/blogs/${blog.id.replace('.md', '')}`} class="blog-link"> {/* id.replace('.md', '') creates a usable slug from the filename. */}
                        <h2 class="blog-title">{blog.data.title}</h2>
                    </a>
                    <p class="description">{blog.data.description}</p>
                    <p class="date">{blog.data.date}</p>
                </li>
            ))
        }

        {console.log(blogs)}
    </ul>

    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family:
                system-ui,
                -apple-system,
                BlinkMacSystemFont,
                "Segoe UI",
                Roboto,
                sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 2rem;
            font-size: 2rem;
            color: #fff;
        }

        .blog-list {
            list-style: none;
            padding: 0;
            margin: 2rem auto;
            max-width: 700px;
        }

        .blog-item {
            margin-bottom: 2rem;
            border-bottom: 1px solid #333;
            padding-bottom: 1rem;
        }

        .blog-link {
            text-decoration: none;
            color: #fff;
        }

        .blog-link h2 {
            font-size: 1.4rem;
            margin: 0 0 0.5rem;
        }

        .description {
            color: #ff69b4;
            font-size: 1rem;
            margin: 0.3rem 0;
        }

        .date {
            color: #ccc;
            font-size: 0.9rem;
        }
    </style>
</BaseLayout>
