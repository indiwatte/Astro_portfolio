---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact Me">
    <section class="contact-page">
        <h1>Contact Me</h1>
        <p>
            You can reach out to me via email or through my social media.
        </p>

        <a class="email-link" href="mailto:indi.watte@student.howest.be">
            Send me an email
        </a>
    </section>

    <style>
        .contact-page {
            text-align: center;
            max-width: 600px;
            margin: 3rem auto;
            padding: 1rem;
            color: #fff;
        }

        .contact-page h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .email-link {
            display: inline-block;
            margin-top: 1.5rem;
            background: #ff69b4;
            color: #fff;
            padding: 0.8rem 2rem;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
        }

        .email-link:hover {
            opacity: 0.85;
        }
    </style>
</BaseLayout>
