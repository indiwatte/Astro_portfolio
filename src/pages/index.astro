	<style>
		h2 {
			font-weight: 800;
			font-size: var(--s3);
		}

		p {
			max-width: 30rem;
			line-height: 1.2rem;
			padding-left: 2rem;
		}

		.introduction,
		.featured-projects {
			display: flex;
			flex-direction: column; /* stack elements vertically */
			align-items: left; /* center them horizontally */
			gap: 1rem; /* space between title, text, and button */
			padding: 3rem 2rem;
		}

		.introduction button {
			background-color: var(--white);
			color: var(--black);
			border: none;
			padding: 0.75rem 1.5rem;
			border-radius: 0.5rem;
			font-size: 1rem;
			max-width: fit-content;
			
		}

		.introduction button:hover {
			background-color: hotpink;
		}
	</style>
