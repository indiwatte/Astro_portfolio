---
import BaseLayout from "./BaseLayout.astro";
const { title } = Astro.props;
---

<BaseLayout title={title}>
    <article class="detail-article">
        <h1>{title}</h1>
        <slot />
    </article>

    <style>
        
        .detail-article {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            font-family: "Inter", sans-serif;
            line-height: 1.6;
            color: #fff;
        }

       
        .detail-article h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .detail-article h2 {
            font-size: 1.6rem;
            margin-top: 2rem;
        }

        .detail-article h3 {
            font-size: 1.3rem;
            margin-top: 1.5rem;
        }

        /* Paragraphs */
        .detail-article p {
            margin-bottom: 1rem;
        }
</style>
</BaseLayout>
